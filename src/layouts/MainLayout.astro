---
import siteInfoJson from "@data/site-info.json";
import { SEO } from "astro-seo";

interface Props {
  pageTitle?: string;
  pageDescription?: string;
  pageKeywords?: string;
  pageAuthor?: string;
}

const {
  pageTitle = siteInfoJson.pageTitle,
  pageDescription = siteInfoJson.pageDescription,
  pageKeywords = siteInfoJson.pageKeywords,
  pageAuthor = siteInfoJson.pageAuthor,
} = Astro.props as Props;
---

<html>
  <head>
    <meta charset="utf-8" />

    <SEO
      title={pageTitle}
      description={pageDescription}
      extend={{
        link: [
          {
            rel: "icon",
            href: "/favicon.ico",
          },
          {
            rel: "sitemap",
            href: "/sitemap-index.xml",
          },
          {
            rel: "robots",
            href: "/robots.txt",
          },
        ],
        meta: [
          {
            name: "viewport",
            content: "width=device-width, initial-scale=1.0",
          },
          {
            name: "generator",
            content: Astro.generator,
          },
          {
            name: "keywords",
            content: pageKeywords,
          },
          {
            name: "author",
            content: pageAuthor,
          },
        ],
      }}
    />
  </head>
  <body>
    <slot />
  </body>
</html>
